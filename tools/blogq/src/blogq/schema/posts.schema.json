{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "posts"
  ],
  "additionalProperties": false,
  "properties": {
    "posts": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/post"
      }
    }
  },
  "$defs": {
    "post": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title",
        "slug",
        "publishedAt",
        "summary",
        "tags",
        "content"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "publishedAt": {
          "type": "string",
          "format": "date-time"
        },
        "summary": {
          "type": "string",
          "maxLength": 600
        },
        "tags": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "content": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}